<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../components/head') %>
		<link rel="stylesheet" href="/css/forms.css" />
		<link rel="stylesheet" href="/css/product.css" />
		<title><%= title %></title>
	</head>
	<body>
		<%- include('../components/navigation') %>
		<main>
			<h1 style="text-align: center">Edit page</h1>

			<% if (productToEdit) { %>

			<div class="grid">
				<div>
					<h2>Current Product:</h2>
					<article class="card product-item">
						<header class="card__header">
							<h1 class="product__title"><%= productToEdit.title %></h1>
						</header>
						<div class="card__image">
							<img src="<%=productToEdit.imageUrl %>" alt="<%=
							productToEdit.title %>"
						</div>
						<div class="card__content">
							<h2 class="product__price">$ <%= productToEdit.price %></h2>
							<p class="product__description">
								<%= productToEdit.description %>
							</p>
						</div>
					</article>
				</div>

				<div>
					<h2>Edit Product:</h2>
					<form
						class="product-form"
						action="/admin/edit-product/<%= productToEdit.id %>"
						method="POST"
					>
						<div class="form-control">
							<label for="title">Title</label>
							<input
								value="<%=productToEdit.title %>"
								type="text"
								name="title"
								id="title"
								required
							/>
						</div>

						<div class="form-control">
							<label for="imageUrl">Image Url</label>
							<input
								value="<%=productToEdit.imageUrl %>"
								type="text"
								name="imageUrl"
								id="imageUrl"
								required
							/>
						</div>

						<div class="form-control">
							<label for="description">Description</label>
							<textarea name="description" id="description" required>
<%=productToEdit.description %></textarea
							>
						</div>

						<div class="form-control">
							<label for="price">Price</label>
							<input
								value="<%=productToEdit.price %>"
								type="number"
								name="price"
								id="price"
								step="0.01"
								required
							/>
						</div>

						<div class="card__actions">
							<button class="btn">Save</button>
							<a href="/admin/products" class="btn">Cancel</a>
						</div>
					</form>
				</div>
			</div>
			<% } %>
		</main>
	</body>
</html>
