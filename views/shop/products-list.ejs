<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../components/head') %>
		<link rel="stylesheet" href="/css/product.css" />
	</head>

	<body>
		<%- include('../components/navigation') %>

		<main>
			<% if (productsList?.length) { %>

			<h1>My Products</h1>
			<p>Products amount (<%= productsList.length %>)</p>
			<div class="grid">
				<% productsList.forEach(product => { %>
				<article class="card product-item">
					<header class="card__header">
						<h1 class="product__title"><%= product.title %></h1>
					</header>
					<div class="card__image">
						<img src=<%= product.imageUrl ? product.imageUrl :
						`https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png`
						%> alt=<%= product.title %> />
					</div>
					<div class="card__content">
						<h2 class="product__price">
							$ <%= product.price ? product.price : 19.99 %>
						</h2>
						<p class="product__description">
							<%= product.description ? product.description : ` A very
							interesting book about so many even more interesting things!` %>
						</p>
					</div>
					<div class="card__actions">
						<button class="btn">Add to Cart</button>
					</div>
				</article>
				<% }) %>
			</div>
			<% } else { %>
			<h1>
				You have not any products yet.
				<a href="/admin/add-product">Add some!</a>
			</h1>
			<% } %>
		</main>
	</body>
</html>
