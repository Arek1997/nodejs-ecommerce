<form
	class="product-form"
	method="POST"
	enctype="multipart/form-data"
	action="/admin/<% if (editMode) { %>edit-product/<%= productToEdit._id %><% } else { %>add-product<% } %>"
>
	<div class="form-control">
		<label for="title">Title</label>
		<input
			type="text"
			name="title"
			id="title"
			required
			value="<% if (editMode) { %><%=productToEdit.title %><% } %>"
		/>
	</div>

	<div class="form-control">
		<label for="image">Image</label>
		<input
			type="file"
			name="<%= fileInputNameAttribute %>"
			id="image"
			required
		/>
	</div>

	<div class="form-control">
		<label for="description">Description</label>
		<textarea name="description" id="description" required>
<% if (editMode) { %><%=productToEdit.description %><% } %></textarea
		>
	</div>

	<div class="form-control">
		<label for="price">Price</label>
		<input
			type="number"
			name="price"
			id="price"
			step="0.01"
			required
			value="<% if (editMode) { %><%=productToEdit.price %><% } %>"
		/>
	</div>

	<% if (editMode) { %>
	<div class="card__actions">
		<button class="btn">Save</button>
		<a href="/admin/products" class="btn">Cancel</a>
	</div>
	<% } else { %>

	<button class="btn" type="submit">Add Product</button>
	<% } %>
	<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
</form>
